<% content_for :title do %>Events<% end %>
<div class="page-header">
  <h3>Events with AJAX</h3>
</div>
<p><%= link_to 'New Event', new_event_path, remote: true, class: "btn btn-primary btn-sm" %></p>
<div id="error-messages"></div>
<div id="event-form"></div>

<table class="table table-hover">
  <tbody class="event-index">
    <%= render "index" %>
  </tbody>
</table>

<div id="event-modal" class="modal fade">
  <div class="modal-dialog">
    <div id="inner-event-modal" class="modal-content"></div>
  </div>
</div>
