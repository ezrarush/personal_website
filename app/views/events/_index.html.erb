<% @events.each do |event| %>
<tr>
  <td class="col-md-3">
    <% if event.all_day %>
    <%= event.start_time.strftime("%B %-d, %Y, %a") %>
    <% else %>
    <%= event.start_time.strftime("%B %-d, %Y, %a %l:%M %P") %>
    <% end %>
  </td>
  <td class="col-md-9">
    <%= link_to event.title, event %>
    <div class="btn-group pull-right">
      <%= link_to 'Edit', edit_event_path(event), remote: true, class: "btn btn-info btn-sm" %>
      <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
    </div>	
  </td>
</tr>
<% end %>
