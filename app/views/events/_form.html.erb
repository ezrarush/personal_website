<%= form_for(@event, remote: true) do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class='field'>
    <%= f.label :all_day -%>
    <%= f.check_box :all_day, :checked => @event[:all_day] -%>
  </div>
  <div class="field">
    <%= f.label :start_time, 'Date' %><br>
    <%= f.date_select :start_time %>
    <span id='start_time_div'>
      &mdash; <%= f.time_select :start_time, :ignore_date => true -%>
    </span>
  </div>
  <div class="field" id='end_time_div'>
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
